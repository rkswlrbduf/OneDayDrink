<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_store_container"
    android:layout_width="145.6dp"
    android:layout_height="159dp"
    android:layout_marginLeft="4.7dp"
    android:layout_marginRight="4.7dp"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="false">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">

        <ImageView
            android:id="@+id/main_store_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toTopOf="@+id/main_store_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/main_store_name"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12.9dp"
            android:gravity="center_vertical"
            android:text="검암뒷고기"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/main_store_image" />

        <include
            android:id="@+id/store_store_drink_beer"
            layout="@layout/main_store_drink_beer"
            android:layout_width="21.7dp"
            android:layout_height="11.6dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="2.8dp"
            android:layout_marginTop="6.7dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_store_name" />

        <include
            android:id="@+id/store_store_drink_soju"
            layout="@layout/main_store_drink_soju"
            android:layout_width="21.7dp"
            android:layout_height="11.6dp"
            android:layout_marginLeft="2.8dp"
            android:layout_marginRight="2.8dp"
            android:layout_marginTop="6.7dp"
            app:layout_constraintLeft_toRightOf="@+id/store_store_drink_beer"
            app:layout_constraintTop_toBottomOf="@+id/main_store_name" />

        <include
            android:id="@+id/store_store_drink_sansachun"
            layout="@layout/main_store_drink_sansachun"
            android:layout_width="21.7dp"
            android:layout_height="11.6dp"
            android:layout_marginLeft="2.8dp"
            android:layout_marginTop="6.7dp"
            app:layout_constraintLeft_toRightOf="@+id/store_store_drink_soju"
            app:layout_constraintTop_toBottomOf="@+id/main_store_name" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>