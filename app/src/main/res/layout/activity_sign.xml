<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/facebook_login"
        app:layout_constraintDimensionRatio="1:0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/google_logout"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/google_logout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="구글 로그아웃"
        app:layout_constraintBottom_toTopOf="@+id/facebook_logout"
        app:layout_constraintDimensionRatio="1:0.2"
        app:layout_constraintLeft_toRightOf="@+id/google_login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/facebook_logout"
        app:layout_constraintTop_toBottomOf="@+id/google_login" />

    <Button
        android:id="@+id/facebook_logout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="페이스북 로그아웃"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:0.2"
        app:layout_constraintLeft_toRightOf="@+id/facebook_login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/google_logout" />

    <com.kakao.usermgmt.LoginButton
        android:id="@+id/kakao_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintDimensionRatio="1:0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/kakao_logout" />

    <Button
        android:id="@+id/kakao_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="카카오 로그아웃"
        app:layout_constraintLeft_toRightOf="@+id/kakao_login"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>