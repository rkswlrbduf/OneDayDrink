<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="168dp"
    android:background="#2a2e43"
    android:paddingLeft="17dp">

    <TextView
        android:id="@+id/little_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:lineSpacingExtra="3sp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/little_recyclerview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="38"
        android:text="고깃집" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/little_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_weight="133"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="18dp"
        app:layout_constraintTop_toBottomOf="@+id/little_title"></android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>