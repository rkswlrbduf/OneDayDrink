<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:padding="15dp">

    <ImageView
        android:id="@+id/store_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/store_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="12" />

    <TextView
        android:id="@+id/store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/store_service"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/store_distance"
        app:layout_constraintTop_toBottomOf="@+id/store_image"
        app:layout_constraintVertical_weight="1.5"
        android:text="왕자상회" />

    <TextView
        android:id="@+id/store_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/store_service"
        app:layout_constraintLeft_toRightOf="@+id/store_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_image"
        app:layout_constraintVertical_weight="1.5"
        android:text="왕자상회" />

    <TextView
        android:id="@+id/store_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="6dp"
        android:textColor="#a333af"
        app:layout_constraintBottom_toTopOf="@+id/store_place"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_distance"
        app:layout_constraintVertical_weight="1"
        android:text="맥주, 음료 무료 제공" />

    <TextView
        android:id="@+id/store_place"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="6dp"
        app:layout_constraintBottom_toTopOf="@+id/store_detail_place"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_service"
        app:layout_constraintVertical_weight="1"
        android:text="홍대" />

    <TextView
        android:id="@+id/store_detail_place"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="6dp"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_place"
        app:layout_constraintVertical_weight="1"
        android:text="서울 마포구 와우산로29바길 16" />

</android.support.constraint.ConstraintLayout>