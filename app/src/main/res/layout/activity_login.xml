<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/로그인"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="112dp"
        android:letterSpacing="0.16"
        android:lineSpacingExtra="1sp"
        android:text="@string/login"
        android:textColor="#005c77"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/login_close"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_email_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="67dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/로그인">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/login_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#cbcbcb"
            android:drawablePadding="17dp"
            android:drawableStart="@drawable/mail"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:paddingLeft="9dp"
            android:textColorHint="#cbcbcb"
            android:textStyle="bold" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_password_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_email_layout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/login_password_text"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:backgroundTint="#cbcbcb"
            android:drawablePadding="17dp"
            android:drawableStart="@drawable/locked"
            android:hint="비밀번호"
            android:paddingLeft="9dp"
            android:textColorHint="#cbcbcb"
            android:textStyle="bold" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/login_find_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28.9dp"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="23sp"
        android:text="@string/find_password"
        android:textColor="#9b9b9b"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_password_layout" />

    <Button
        android:id="@+id/login_login"
        android:layout_width="280dp"
        android:layout_height="54dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/sign_button"
        android:text="@string/login"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_find_password" />

</android.support.constraint.ConstraintLayout>