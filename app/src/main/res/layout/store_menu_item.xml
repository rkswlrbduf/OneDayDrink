<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <ImageView
        android:id="@+id/store_menu_dot"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:src="@drawable/dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/store_text_menu_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/store_text_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/store_menu_dot"
        app:layout_constraintRight_toLeftOf="@+id/store_text_menu_line"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="한성포차" />

    <View
        android:id="@+id/store_text_menu_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="10dp"
        android:background="#cbcbcb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/store_text_menu_name"
        app:layout_constraintRight_toLeftOf="@+id/store_text_menu_price"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/store_text_menu_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/store_text_menu_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10,000원" />

</android.support.constraint.ConstraintLayout>