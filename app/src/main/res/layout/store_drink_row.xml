<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_width="100dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/drink_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="#ffee33"
            app:layout_constraintDimensionRatio="1:1.5"
            app:layout_constraintBottom_toTopOf="@+id/row_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="87" />

        <TextView
            android:id="@+id/drink_name"
            app:layout_constraintDimensionRatio="2:1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:lineSpacingExtra="2sp"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:background="#00000000"
            tools:text="감자 튀김"
            app:fontName="Custom1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/drink_image"
            android:layout_marginBottom="3dp"
            app:layout_constraintVertical_chainStyle="packed" />

    </android.support.constraint.ConstraintLayout>